<div class="container">
  <div class="row">
    <div class="col-md-4" >
      <div class="card">
        <div class="card-body">


          <form class="" action="/addf" method="POST">

            <div class="form-group">
              <input type="text" name="nombre" class="form-control" placeholder="Nombre de Facultad" >

            </div>

            <button type="submit" class="btn btn-primary btn-block">Insertar <Datos></Datos></button>

          </form>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Facultades</th>

            <th>Operacion</th>
            <th>Elimiar Facultad</th>

          </tr>
        </thead>

        <tbody>

          <% for(var i=0; i < facuT.length; i++) { %>
             <tr>
              <th scope="row"><%= i + 1 %></th>
              <td> <%=facuT[i].nombre %> </td>

              <td>
                <a href="/editFacultad/<%=facuT[i]._id %>" class="btn btn-info">Edit</a>
                <a href="/insertcarrera/<%=facuT[i]._id %>" class="btn btn-info">Carreras</a>
              </td>
              <td>
                <a href="/deletFacu/<%=facuT[i]._id %>" class="btn btn-danger">Eliminar</a>
              </td>

               </tr>

            <% } %>


        </tbody>

      </table>

    </div>
    </div>
  </div>


