  <!-- averiguar como usar el buscardor para docentes Dictamenes -->
  <form class="form-inline my-2 my-lg-0">
  <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
  </form>
  </div>
  </nav>
  <br><br>
  <div class="container">
           <div class="row">
             <div class="col-md-3">
               <div class="card">
                 <div class="card-body">


                   <form class="" action="/addCartasEST/<%= idGlobalEST%>" method="POST">
                     <div class="form-group">
                       <input type="text" name="nombre" placeholder="Nombre Docente" class="form-control">

                     </div>

                     <div class="form-group">
                       <input type="text" name="apellido" placeholder="Apellido Docente" class="form-control">

                     </div>

                     <div class="form-group">
                       <input type="text" name="pdf" placeholder="Carta.pdf" class="form-control">

                     </div>

                     <div class="form-group">
                       <textarea name="obs" rows="4" cols="80" class="form-control" placeholder="Observaciones"></textarea>

                     </div>

                     <button type="submit" class="btn btn-primary btn-block">Insertar <Datos></Datos></button>

                   </form>

                 </div>

               </div>

             </div>

             <div class="col-md-9">
               <table class="table table-bordered table-hover">
                 <thead>
                   <tr>
                     <th>Nombre</th>
                     <th>Apeliido</th>
                     <th>DOC</th>
                     <th>Observaciones</th>
                     <th>Operacion</th>

                   </tr>
                 </thead>

                 <tbody>
                   <% for(var i=0; i < files.length; i++) { %>
                     <tr>
                       <td> <%=files[i].nombre %> </td>
                       <td> <%=files[i].apellido %> </td>
                       <td>  </td>
                       <td> <%=files[i].obs %> </td>
                       <td>
                         <a href="/deleteCartaEST/<%=files[i]._id %>" class="btn btn-danger">Del</a>
                         <a href="/formEditCartaEST/<%=files[i]._id %>" class="btn btn-info">Edit</a>
                       </td>
                     </tr>

                     <% } %>
                 </tbody>

               </table>

             </div>

           </div>

         </div>
         <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
